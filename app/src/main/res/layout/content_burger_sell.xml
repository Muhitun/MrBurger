<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@drawable/background2"
    tools:context="com.example.sohan.mrburger.BurgerSellActivity"
    tools:showIn="@layout/activity_burger_sell">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/gridLayout"
        android:layout_alignParentEnd="true">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imageView"
            android:src="@drawable/burger1"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="chicken" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:text="Chicken Burger\nwith cheese\nPrice 180tk"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textSize="21dp"
            android:id="@+id/textView"
            android:layout_row="1"
            android:layout_column="0" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/imageView2"
            android:src="@drawable/burger2"
            android:layout_row="0"
            android:layout_column="2"
            android:onClick="beef" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:text="Beef Burger\nwith cheese\nPrice 200tk"
            android:id="@+id/textView2"
            android:textColor="#000000"
            android:textSize="21dp"
            android:layout_marginLeft="30dp"
            android:layout_row="1"
            android:layout_column="2" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="25dp"
            android:id="@+id/imageView3"
            android:src="@drawable/burger3"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="fiveLayer" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/burger4"
            android:layout_marginLeft="30dp"
            android:id="@+id/imageView4"
            android:layout_row="3"
            android:layout_column="2"
            android:onClick="fish" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:text="5 Layer Burger\nwith cheese\nPrice 350tk"
            android:textSize="21dp"
            android:id="@+id/textView3"
            android:textColor="#000000"
            android:layout_row="4"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:text="Fish Burger\nwith cheese\nPrice 170tk"
            android:textSize="21dp"
            android:layout_marginLeft="30dp"
            android:textColor="#000000"
            android:id="@+id/textView4"
            android:layout_row="4"
            android:layout_column="2" />

    </GridLayout>

</RelativeLayout>
